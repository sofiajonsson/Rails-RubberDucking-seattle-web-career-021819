<h2> Edit a Duck:</h2>

<% if @duck.errors.any? %>
  You had some errors!
  <ul>
    <% @duck.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @duck do |f| %>
<%=f.label :name %>
<%=f.text_field :name %>
<%=f.label :description %>
<%=f.text_field :description %>
<%=f.collection_select :duck_id, Student.all, :id, :name %>
<%= f.submit %>
<% end %>
