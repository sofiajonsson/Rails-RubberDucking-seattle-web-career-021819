<h1>Create a New Student</h1>

<% if @student.errors.any? %>
  You had some errors!
  <ul>
    <% @student.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @student do |f| %>
<%=f.label :name %>
<%=f.text_field :name %>
<%=f.label :mod %>
<%=f.number_field :mod %>
<%=f.submit %>
<% end %>
